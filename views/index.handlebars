            <i class="large material-icons prefix">search</i>
            <input id="user_search" id="icon_prefix" type="search" class="search">
            <label for="icon_prefix">Search</label>
          </div>

          <div class="input-field label col s2 m2">
              <a id="submit" class="grey darken-1 waves-effect waves-light btn-large">Submit</a>
            </div>
        </div>
       
        <!-- Album, Artist, Song -->
        <div class="row center">
